<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:scaleType="fitXY"
        android:background="@drawable/menu_gofood"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Food"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="#4BC21F"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Nama"
            android:layout_marginTop="25dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edit_txt_nama"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/txt_nama"
            android:layout_marginTop="40dp"
            android:hint="Isi Nama"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Alamat"
            android:layout_marginTop="25dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edit_txt_alamat"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/txt_alamat"
            android:layout_marginLeft="30dp"
            android:hint="Isi Alamat"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Pesanan"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edit_txt_pesanan"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/txt_pesanan"
            android:layout_marginLeft="20dp"
            android:hint="Isi Pesanan"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_pesan_makanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="#2FE011"/>
</LinearLayout>